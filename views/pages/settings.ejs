<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="login">
    <h2 class="text-center">Settings</h2>
    <form method="POST" action="/update-username" class="mb-4">
      <div class="row g-2 align-items-center">
        <div class="col-md">
          <div class="form-outline">
            <label class="form-label" for="username">Username:</label>
            <input class="form-control" type="text" id="username" name="username" value="username" required>
          </div>
        </div>
        <div class="col-md-auto">
          <button class="btn btn-primary" type="submit">Change</button>
        </div>
      </div>
    </form>

    <form method="POST" action="/update-email" class="mb-4">
      <div class="row g-2 align-items-center">
        <div class="col-md">
          <div class="form-outline">
            <label class="form-label" for="email">Email:</label>
            <input class="form-control" type="email" id="email" name="email" value="email" required>
          </div>
        </div>
        <div class="col-md-auto">
          <button class="btn btn-primary" type="submit">Change</button>
        </div>
      </div>
    </form>

    <form method="POST" action="/update-password">
      <div class="row g-2 align-items-center">
        <div class="col-md">
          <div class="form-outline">
            <label class="form-label" for="password">Password:</label>
            <input class="form-control" type="password" id="password" name="password" required>
          </div>
        </div>
        <div class="col-md-auto">
          <button class="btn btn-primary" type="submit">Change</button>
        </div>
      </div>
    </form>
  </div>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>